{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "lib": ["es2021", "DOM"],
    "sourceMap": false,
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true
  },
  "include": ["lib"]
}
